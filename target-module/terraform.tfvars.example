# ChatOps Terraform Module Configuration
# Copy this file to terraform.tfvars and fill in your values

# Basic Configuration
name_prefix = "my-chatops"
aws_region  = "us-east-1"

# GitHub Configuration
github_owner = "your-github-username"
github_repo  = "your-repository-name"
github_branch = "main"
github_token = "ghp_your_github_personal_access_token"

# Telegram Configuration
telegram_bot_token = "1234567890:ABCdefGHIjklMNOpqrsTUVwxyz"
authorized_chat_id = "123456789"

# S3 Configuration (for Terraform state)
s3_bucket_arn = "arn:aws:s3:::your-terraform-state-bucket"

# Lambda ZIP Paths (created by setup.sh)
webhook_lambda_zip_path = "../lambda-zips/webhook-handler.zip"
telegram_lambda_zip_path = "../lambda-zips/telegram-bot.zip"

# Optional Configuration
max_message_length = 3500
log_retention_days = 7
api_gateway_stage = "prod"

# Tags
tags = {
  Environment = "production"
  Project     = "chatops"
  ManagedBy   = "terraform"
}